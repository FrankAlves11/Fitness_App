@model User

<h2>Create a New User</h2>

@using (Html.BeginForm("InsertUserToDatabase", "User", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Age" class="control-label">Age</label>
    <input type="number" step="0.01" name="Age" class="form-control" />

    <label asp-for="Weight" class="control-label">Weight</label>
    <input type="number" step="0.01" name="Weight" class="form-control" value="@Model.Weight" />

    <label asp-for="Height" class="control-label">Height</label>
    <input type="number" step="0.01" name="Height" class="form-control" value="@Model.Height" />

    <label asp-for="Gender" class="control-label">Gender</label>
    <input type="text" name="Gender" class="form-control" value="@Model.Gender" />

    <label asp-for="Workout" class="control-label">Workout</label>
    <input type="text" name="Workout" class="form-control" value="@Model.Workout" />

    <label asp-for="Nutrition" class="control-label">Nutrition</label>
    <input type="text" name="Nutrition" class="form-control" value="@Model.Nutrition" />
   


    <input type="submit" value="Create User" class="btn btn-primary" />
}
