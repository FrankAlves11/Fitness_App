@model User

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateUserToDatabase", "User", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Age" class="control-label">Age</label>
    <input type="text" name="Age" class="form-control" value="@Model.Age" />

    <label asp-for="Weight" class="control-label">Weight</label>
    <input type="number" step="0.01" name="Weight" class="form-control" value="@Model.Weight" />

    <label asp-for="Height" class="control-label">Height</label>
    <input type="number" step="0.01" name="Height" class="form-control" value="@Model.Height" />

    <label asp-for="Gender" class="control-label">Gender</label>
    <input type="text" name="Gender" class="form-control" value="@Model.Gender" />


    <input type="submit" value="Update @Model.Name" class="btn btn-primary" />
}
